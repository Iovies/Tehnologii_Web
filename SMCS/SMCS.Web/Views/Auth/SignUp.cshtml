@{
}
@model SMCS.Web.Models.Auth.RegisterViewModel

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-stretch auth multi-step-login auth-img-bg">
            <div class="row flex-grow">
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">
                        @using (Html.BeginForm("register", "auth", FormMethod.Post, new { @class = "pt-3 form step-form", id = "msform" }))
                        {
                            <fieldset class="text-left">
                                <div class="brand-logo">
                                    <img src="/imgs/logo.svg" alt="logo">
                                </div>
                                <h4>New here?</h4>
                                <h6 class="font-weight-light">Join us today! It takes only few steps</h6>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Username, new {@class="align-items-center"})
                                    @Html.TextBoxFor(a => a.Username, new { @class = "form-control form-control-lg border-left-0", placeholder = "Username" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Email, new {@class="align-items-center"})
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control form-control-lg border-left-0", placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Password, new {@class="align-items-center"})
                                    @Html.PasswordFor(a => a.Password, new { @class = "form-control form-control-lg border-left-0", placeholder = "Password" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.ConfirmPassword, new {@class="align-items-center"})
                                    @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control form-control-lg border-left-0", placeholder = "Confirm Password" })
                                </div>
                                <button class="btn btn-primary next action-button float-start" type="button" name="next" value="Next">Next</button>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="@Url.Action("login", "auth")" class="text-primary">Login</a>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="brand-logo">
                                    <img src="/imgs/logo.svg" alt="logo">
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.FirstName)
                                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control form-control-lg border-left-0", placeholder = "First Name" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.LastName)
                                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control form-control-lg border-left-0", placeholder = "Last Name" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Patronymic)
                                    @Html.TextBoxFor(a => a.Patronymic, new { @class = "form-control form-control-lg border-left-0", placeholder = "Patronymic" })
                                </div>
                                <button class="btn btn-primary next action-button float-start" type="button" name="next" value="Next">Next</button>
                            </fieldset>
                            <fieldset>
                                <div class="brand-logo">
                                    <img src="/imgs/logo.svg" alt="logo">
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.IDCardSeries)
                                    @Html.TextBoxFor(a => a.IDCardSeries, new { @class = "form-control form-control-lg border-left-0", placeholder = "ID Card Series" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.IDCardNumber)
                                    @Html.TextBoxFor(a => a.IDCardNumber, new { @class = "form-control form-control-lg border-left-0", placeholder = "ID Card Number" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.IDNP)
                                    @Html.TextBoxFor(a => a.IDNP, new { @class = "form-control form-control-lg border-left-0", placeholder = "IDNP" })
                                </div>
                                <button class="btn btn-primary next action-button float-start" type="button" name="next" value="Next">Next</button>
                            </fieldset>
                            <fieldset>
                                <div class="brand-logo">
                                    <img src="/imgs/logo.svg" alt="logo">
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.PhoneNumber)
                                    @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control form-control-lg border-left-0", placeholder = "Phone Number" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.BirthDate)
                                    @Html.TextBoxFor(a => a.BirthDate, new { @class = "form-control form-control-lg border-left-0", placeholder = "Birth Date" })
                                </div>
                                <button class="btn btn-primary next action-button float-start" type="button" name="next" value="Next">Next</button>
                            </fieldset>
                            <fieldset>
                                <div class="brand-logo">
                                    <img src="/imgs/logo.svg" alt="logo">
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Faculty)
                                    @Html.TextBoxFor(a => a.Faculty, new { @class = "form-control form-control-lg border-left-0", placeholder = "Faculty" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Speciality)
                                    @Html.TextBoxFor(a => a.Speciality, new { @class = "form-control form-control-lg border-left-0", placeholder = "Speciality" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Group)
                                    @Html.TextBoxFor(a => a.Group, new { @class = "form-control form-control-lg border-left-0", placeholder = "Group" })
                                </div>
                                <input class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit" value="Register">
                            </fieldset>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }
                        }

                    </div>
                </div>
                <div class="col-lg-6 register-half-bg d-flex flex-row">
                    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2021 All rights reserved.</p>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>


