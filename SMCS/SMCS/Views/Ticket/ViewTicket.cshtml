@{
}
@model TicketDbModel

<h3>
    @Model.ID.ToString().Substring(0, 8) - @Model.TicketTitle.ToString()
</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">@Model.TicketDescription.ToString()</p>
            </div>
            <div class="card-body">
                <h5 class="card-title">Locatie</h5>
                <p class="card-text">@Model.Location.ToString()</p>
            </div>
            <div class="card-body">
                <h5 class="card-title">Contacts</h5>
                <p class="card-text">@Model.ContactInfo.ToString()</p>
            </div>
        </div>
    </div>
</div>
